<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record model="ir.ui.view" id="view_order_form_inherit_remove_exp_quotations">
            <field name="name">sale.order.form.inherit.remove_exp_quotations</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref='sale.view_order_form'/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="is_expired"/>
                    <field name="state"/>
                </xpath>
            </field>
        </record>
        <record id="remove_exp_quotations_cron" model="ir.cron">
            <field name="name">Remove Expired Quotations Automatically</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall">1</field>
            <field name="model_id" ref="remove_exp_quotations.model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model.action_cron_auto_cancel()</field>
        </record>
    </data>
</odoo>

